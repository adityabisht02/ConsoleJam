<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css">
    <title>AimLab</title>
    <style>
      * {
        cursor: url(CrosshairPrecision.cur), default;
        margin: 0;
        color: white;
        font-family: cursive;
        background-color: rgb(36, 28, 28);
      }
      .box {
        width: 1500px;
        height: 490px;
      }
      .tracker-heading {
        text-decoration: underline;
      }
      .circle {
        height: 25px;
        width: 25px;
        border-radius: 50%;
        border: 1px solid black;
        background-color: red;
        box-shadow: inset -5px -3px 1px rgba(253, 253, 253, 0.5);
      }
      button {
        box-shadow: rgb(250, 249, 249) 40px;
        padding: 10px;
        margin: 5px;
        width: 100px;
        font-weight: bold;
        transition: all 1s;
      }
      button:hover {
        background-color: white;
        color: black;
        cursor:pointer;
        
      }
      div {
        text-align: center;
      }
    </style>
  </head>
  <body>
    <nav>
        <div class="brand"> <img class="logo" src="/images/logo.png"><div class="brand-title">ConsoleJam</div></div>
           <ul>
                <% navbar.forEach((item)=>{%>
                    <li><%-item%></li>
                <%})%>
           </ul>
       </nav>
    <h1 style="text-align: center" class="tracker-heading">Tracking Test</h1>

    <div class="box">
      <div class="circle"></div>
    </div>

    <h2 style="text-align: center">
      Score(Counted on the seconds you stay on the circle) -
    </h2>

    <h1 style="text-align: center" class="score">0</h1>
    <div>
      <button onclick="resetscore()">Reset Score</button>
    </div>

    <script>
      let hoverstart;
      let hoverend;
      let hovertime = 0;
      let score = document.querySelector(".score");
      let circle = document.querySelector(".circle");
      circle.addEventListener("mouseover", function () {
        let randomX = Math.floor(Math.random() * 1500) + 1;

        let randomY = Math.floor(Math.random() * 490) + 1;

        randomX = randomX + "px";
        randomY = randomY + "px";
        direction = "translate(" + randomX + "," + randomY + ")";
        circle.style.transform = direction;

        circle.style.transition = "all 4s";

        hoverstart = new Date().getSeconds();
      });

      circle.addEventListener("mouseout", function () {
        hoverend = new Date().getSeconds();
        hovertime = hovertime + (hoverend - hoverstart);
        score.innerHTML = hovertime;
      });

      function resetscore() {
        score.innerHTML = "0";
      }
    </script>
  </body>
</html>